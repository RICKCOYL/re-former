<%= form_tag( users_path, method: "post") do %>
<div>
<%= label_tag(:username,"Username") %>
<%= text_field(:user,:username) %>
</div>
<div>
<%= label_tag(:email,"Email") %>
<%= email_field(:user, :email) %>
</div>
<div>
<%= label_tag(:password,"Password") %>
<%= password_field_tag(:password) %>
</div>
<div>
<%= submit_tag("Submit")%>
</div>
<% end %>